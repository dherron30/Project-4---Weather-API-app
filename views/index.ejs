<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Weather App</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="card">
    <div class="search">
      <form action="/" method="GET">
        <input type="text" name="city" placeholder="Enter city" value="<%= city %>" spellcheck="false" />
        <button type="submit"><img src="/images/search.png" alt="Search"></button>
      </form>
    </div>

    <% if (errorMessage) { %>
      <div class="error">
        <p><%= errorMessage %></p>
      </div>
    <% } %>

    <% if (weatherData) { %>
      <div class="weather">
        <h1 class="temp"><%= Math.round(weatherData.main.temp) %>Â°C</h1>
        <h2 class="city"><%= weatherData.name %></h2>
        <div class="details">
          <div class="col">
            <img src="/images/humidity.png" alt="Humidity">
            <div>
              <p class="humidity"><%= weatherData.main.humidity %>%</p>
              <p>Humidity</p>
            </div>
          </div>
          <div class="col">
            <img src="/images/wind.png" alt="Wind">
            <div>
              <p class="wind"><%= weatherData.wind.speed %> km/h</p>
              <p>Wind Speed</p>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</body>
</html>
